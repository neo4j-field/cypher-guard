{
  "name": "cypher-guard",
  "version": "0.1.19",
  "description": "Comprehensive Cypher query validation for Neo4j with schema support and LLM-optimized error reporting",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "napi build --platform --release",
    "test": "ts-node test.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write *.ts *.js *.d.ts",
    "format:check": "prettier --check *.ts *.js *.d.ts"
  },
  "keywords": [
    "neo4j",
    "cypher",
    "validation",
    "schema",
    "database",
    "graph",
    "llm",
    "error-reporting",
    "syntax-validation",
    "query-analysis"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@napi-rs/cli": "^2.16.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@napi-rs/cli": "^2.16.0"
  }
}
